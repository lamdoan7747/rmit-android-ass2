<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".main.siteView.mySiteView.MySiteEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:orientation="vertical">



        <EditText
            android:id="@+id/editSiteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Create cleaning site" />

        <EditText
            android:id="@+id/editSiteAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"/>



        <EditText
            android:id="@+id/editSiteLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitude"
            android:enabled="false"/>

        <EditText
            android:id="@+id/editSiteLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitude"
            android:enabled="false"/>


        <Button
            android:id="@+id/editSiteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/editSiteLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add location" />

        <Button
            android:id="@+id/editSiteBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/editLoading"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:visibility="gone"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>