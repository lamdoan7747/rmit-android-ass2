<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.siteView.SiteCreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/backButtonToolbarSiteCreate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center|start"
                android:background="@color/backgroundColor"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/header_title_create_site"
                android:textColor="@color/primaryColor"
                android:textSize="24sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADADA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/siteNameSiteCreate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/white_rectangle_background"
            android:elevation="5dp"
            android:hint="Site name"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            tools:targetApi="lollipop" />

        <EditText
            android:id="@+id/siteAddressSiteCreate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/white_rectangle_background"
            android:elevation="5dp"
            android:hint="Address"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            tools:targetApi="lollipop" />

        <EditText
            android:id="@+id/siteDateSiteCreate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/white_rectangle_background"
            android:elevation="5dp"
            android:hint="Date"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/siteStartTimeSiteCreate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle_background"
                android:elevation="5dp"
                android:hint="From"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                tools:targetApi="lollipop" />

            <EditText
                android:id="@+id/siteEndTimeSiteCreate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle_background"
                android:elevation="5dp"
                android:hint="To"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                tools:targetApi="lollipop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/siteLatitudeSiteCreate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle_background"
                android:elevation="5dp"
                android:enabled="false"
                android:hint="Latitude"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                tools:targetApi="lollipop" />

            <EditText
                android:id="@+id/siteLongitudeSiteCreate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle_background"
                android:elevation="5dp"
                android:enabled="false"
                android:hint="Longitude"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                tools:targetApi="lollipop" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addLocationSiteCreate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/white_rectangle_background"
            android:backgroundTint="@color/white"
            android:elevation="5dp"
            android:text="Add location"
            android:textColor="@color/primaryColor"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/createSiteSiteCreate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/white_rectangle_background"
            android:text="Create" />
    </LinearLayout>
</FrameLayout>